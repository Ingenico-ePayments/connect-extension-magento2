<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="worldline-api" type="host">*.worldline-solutions.com</value>
                <value id="worldline-assets" type="host">*.secured-by-ingenico.com</value>
                <value id="google" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="worldline-api" type="host">*.worldline-solutions.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="apple" type="host">*.cdn-apple.com</value>
                <value id="google" type="host">*.google.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="apple" type="host">*.cdn-apple.com</value>
                <value id="googleapis" type="host">fonts.googleapis.com</value>
                <value id="gstatic" type="host">fonts.gstatic.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="google" type="host">*.gstatic.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
