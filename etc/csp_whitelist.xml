<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="ingenico-api" type="host">*.api-ingenico.com</value>
                <value id="ingenico-assets" type="host">*.secured-by-ingenico.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="ingenico-api" type="host">*.api-ingenico.com</value>
                <value id="ingenico-assets" type="host">*.secured-by-ingenico.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
